<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.FirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.SecondServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowIPAdress</servlet-name>
        <servlet-class>fr.m2i.javawebapp.ShowIPAdress</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowRequestHeaders</servlet-name>
        <servlet-class>fr.m2i.javawebapp.ShowRequestHeaders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PairsServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.PairsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountWordsServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.CountWordsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountWordServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.CountWordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/FirstServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/SecondServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowIPAdress</servlet-name>
        <url-pattern>/ShowIPAdress</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowRequestHeaders</servlet-name>
        <url-pattern>/ShowRequestHeaders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PairsServlet</servlet-name>
        <url-pattern>/PairsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CountWordServlet</servlet-name>
        <url-pattern>/CountWordServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
